[Unit]
Description=MT5 TV + Pine-Parity Bot
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/mt5_tv_pine_parity_bot
ExecStart=/opt/mt5_tv_pine_parity_bot/.venv/bin/python -m mt5_tv_pine_parity_bot --config /opt/mt5_tv_pine_parity_bot/configs/default.yaml
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
